#  vim: filetype=i3config

###--- BASICS ---### {{{{
set $mod Mod4
font pango:Ubuntu 11
bindsym $mod+b bar mode toggle
hide_edge_borders smart
new_window pixel 1

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Quick launching
bindsym $mod+Return exec konsole 
bindsym $mod+r exec konsole -e ranger
bindsym Control+Escape exec konsole -e htop
bindsym XF86Calculator exec kcalc
bindsym $mod+m exec konsole -e ncmpcpp 

# kill focused window
bindsym $mod+Shift+q kill
# }}}}

###--- ROFI ---### {{{{
bindsym $mod+d exec rofi -show drun
bindsym $mod+Tab exec rofi -show window 
# }}}}

###--- FOCUS & PANES ---### {{{{
# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+x split h

# split in vertical orientation
bindsym $mod+v split v

# toggle split
bindsym $mod+t split toggle

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
# bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child
# }}}}

###--- WORKSPACES ---### {{{{
# Upper comment = paired workspaces
# Lower comment = individual workspaces

# WORK
# Terminal
set $ws1 "1 "
# Reading
set $ws2 "2 "

# INTERNET
# Web 
set $ws3 "3 "
# Download
set $ws4 "4"

# MISC
# Misc 1 
set $ws5 "5"
# Misc 2 
set $ws6 "6"

# MEDIA
# Video 
set $ws7 "7 "
# Music
set $ws8 "8 "  

# TASK & COMMS
# Task 
set $ws9 "9 "
# Social & Cal
set $ws10 "10 "

# switch to workspace
bindsym $mod+1 workspace $ws1 move workspace to output DVI-0
bindsym $mod+2 workspace $ws2 move workspace to output DVI-1
bindsym $mod+3 workspace $ws3 move workspace to output DVI-0
bindsym $mod+4 workspace $ws4 move workspace to output DVI-1
bindsym $mod+5 workspace $ws5 move workspace to output DVI-0
bindsym $mod+6 workspace $ws6 move workspace to output DVI-1
bindsym $mod+7 workspace $ws7 move workspace to output DVI-0
bindsym $mod+8 workspace $ws8 move workspace to output DVI-1
bindsym $mod+9 workspace $ws9 move workspace to output DVI-0
bindsym $mod+0 workspace $ws10 move workspace to output DVI-1

# inverse switch to workspace
bindsym $mod+Mod1+1 workspace $ws1 move workspace to output DVI-1
bindsym $mod+Mod1+2 workspace $ws2 move workspace to output DVI-0
bindsym $mod+Mod1+3 workspace $ws3 move workspace to output DVI-1
bindsym $mod+Mod1+4 workspace $ws4 move workspace to output DVI-0
bindsym $mod+Mod1+5 workspace $ws5 move workspace to output DVI-1
bindsym $mod+Mod1+6 workspace $ws6 move workspace to output DVI-0
bindsym $mod+Mod1+7 workspace $ws7 move workspace to output DVI-1
bindsym $mod+Mod1+8 workspace $ws8 move workspace to output DVI-0
bindsym $mod+Mod1+9 workspace $ws9 move workspace to output DVI-1
bindsym $mod+Mod1+0 workspace $ws10 move workspace to output DVI-0

# switch to pair
bindsym $mod+Control+1 \
workspace $ws1; move workspace to output DVI-0; \
workspace $ws2; move workspace to output DVI-1; \
focus output DVI-0; workspace $ws1

bindsym $mod+Control+2 \
workspace $ws1; move workspace to output DVI-0; \
workspace $ws2; move workspace to output DVI-1; \
focus output DVI-0; workspace $ws1

bindsym $mod+Control+3 \
workspace $ws3; move workspace to output DVI-0; \
workspace $ws4; move workspace to output DVI-1; \
focus output DVI-0; workspace $ws3

bindsym $mod+Control+4 \
workspace $ws3; move workspace to output DVI-0; \
workspace $ws4; move workspace to output DVI-1; \
focus output DVI-0; workspace $ws3

bindsym $mod+Control+5 \
workspace $ws5; move workspace to output DVI-0; \
workspace $ws6; move workspace to output DVI-1; \
focus output DVI-0; workspace $ws5

bindsym $mod+Control+6 \
workspace $ws5; move workspace to output DVI-0; \
workspace $ws6; move workspace to output DVI-1; \
focus output DVI-0; workspace $ws5

bindsym $mod+Control+7 \
workspace $ws7; move workspace to output DVI-0; \
workspace $ws8; move workspace to output DVI-1; \
focus output DVI-0; workspace $ws7

bindsym $mod+Control+8 \
workspace $ws7; move workspace to output DVI-0; \
workspace $ws8; move workspace to output DVI-1; \
focus output DVI-0; workspace $ws7

bindsym $mod+Control+9 \
workspace $ws9; move workspace to output DVI-0; \
workspace $ws10; move workspace to output DVI-1; \
focus output DVI-0; workspace $ws9

bindsym $mod+Control+0 \
workspace $ws9; move workspace to output DVI-0; \
workspace $ws10; move workspace to output DVI-1; \
focus output DVI-0; workspace $ws9

# Move workspace
bindsym $mod+Mod1+Left move workspace to output DVI-0
bindsym $mod+Mod1+Right move workspace to output DVI-1

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# move container & focus to workspace
bindsym $mod+Mod1+Shift+1 move container to workspace $ws1; workspace $ws1
bindsym $mod+Mod1+Shift+2 move container to workspace $ws2; workspace $ws2
bindsym $mod+Mod1+Shift+3 move container to workspace $ws3; workspace $ws3
bindsym $mod+Mod1+Shift+4 move container to workspace $ws4; workspace $ws4
bindsym $mod+Mod1+Shift+5 move container to workspace $ws5; workspace $ws5
bindsym $mod+Mod1+Shift+6 move container to workspace $ws6; workspace $ws6
bindsym $mod+Mod1+Shift+7 move container to workspace $ws7; workspace $ws7
bindsym $mod+Mod1+Shift+8 move container to workspace $ws8; workspace $ws8
bindsym $mod+Mod1+Shift+9 move container to workspace $ws9; workspace $ws9
bindsym $mod+Mod1+Shift+0 move container to workspace $ws10; workspace $ws10
# }}}}

###--- RELOAD & SESSION MANANGEMENT ---### {{{{
# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# screen lock
bindsym $mod+shift+x exec i3lock --color "$inactive-bg-color"
# }}}}

###--- RESIZE ---### {{{{
# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+Mod1+r mode "resize"
# }}}}

###--- MPD --### {{{{

#set $music --no-startup-id konsole -e ncmpcpp
set $pause --no-startup-id mpc toggle
set $next --no-startup-id mpc next
set $prev --no-startup-id mpc prev
# }}}}

###-- MEDIA KEYS ---### {{{{

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound

# Media player controls
bindsym XF86AudioPlay exec $pause
bindsym XF86AudioNext exec $next
bindsym XF86AudioPrev exec $prev
# }}}}

