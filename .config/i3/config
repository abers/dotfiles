###--- THEME ---#### {{{{
set $bg-color            #545864
set $inactive-bg-color   #2f343f
set $text-color          #f3f4f5
set $inactive-text-color #676E7D
set $urgent-bg-color     #E53935

# window colors
#                       border              background         text                 indicator
client.focused          $bg-color           $bg-color          $text-color          #79740e
client.unfocused        $inactive-bg-color  $inactive-bg-color $inactive-text-color #79740e
client.focused_inactive $inactive-bg-color  $inactive-bg-color $inactive-text-color #79740e
client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color          #79740e
# }}}}

###--- BAR ---### {{{{
bar {
       output DVI-0
       tray_output DVI-1
       status_command i3blocks -c ~/.config/i3/time.conf
       mode hide
       font pango:Ubuntu 10, FontAwesome 11
       colors {
               background $inactive-bg-color
               separator #757575
               #                  border             background         text
               focused_workspace  $inactive-bg-color $inactive-bg-color $text-color
               inactive_workspace $inactive-bg-color $inactive-bg-color $inactive-text-color
               urgent_workspace   $urgent-bg-color   $urgent-bg-color   $text-color
       }
}

bar {
       output DVI-1
       tray_output DVI-1
       status_command i3blocks -c ~/.config/i3/music.conf
       mode hide
       font pango:Ubuntu 10, FontAwesome 11
       colors {
               background $inactive-bg-color
               separator #757575
               #                  border             background         text
               focused_workspace  $inactive-bg-color $inactive-bg-color $text-color
               inactive_workspace $inactive-bg-color $inactive-bg-color $inactive-text-color
               urgent_workspace   $urgent-bg-color   $urgent-bg-color   $text-color
       }       
}
# }}}}

